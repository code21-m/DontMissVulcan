<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DontMissVulcan.Views.Recruitment.RecruitmentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DontMissVulcan.Views.Recruitment"
    xmlns:tagselection="using:DontMissVulcan.ViewModels.Recruitment.TagSelection"
    xmlns:matching="using:DontMissVulcan.ViewModels.Recruitment.Matching"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <x:Double x:Key="LeargeFontSize">16</x:Double>
        <x:Double x:Key="SmallFontSize">11</x:Double>
    </Page.Resources>

    <Grid>
        <StackPanel Margin="5">
            <!-- ウィンドウ選択 -->
            <Grid Margin="0,0,0,5">
                <StackPanel Orientation="Horizontal">
                    <Button Width="50" Height="30" Margin="0,0,5,0" FontSize="{StaticResource SmallFontSize}"
                        Content="更新"
                        Command="{x:Bind ViewModel.WindowSelector.UpdateWindowsCommand}" />

                    <ComboBox Width="150" Height="30" Margin="0,0,5,0" FontSize="{StaticResource SmallFontSize}"
                        ItemsSource="{x:Bind ViewModel.WindowSelector.WindowTitles}"
                        SelectedIndex="{x:Bind ViewModel.WindowSelector.SelectedWindowIndex, Mode=TwoWay}">
                    </ComboBox>

                    <Button Width="180" Height="30" FontSize="{StaticResource SmallFontSize}"
                        Content="3秒後にアクティブなウィンドウを取得"
                        Command="{x:Bind ViewModel.WindowSelector.GetForegroundWindowAfter3sCommand}" />
                </StackPanel>
            </Grid>

            <!-- タグ選択 -->
            <Grid Margin="0,0,0,5">
                <StackPanel>
                    <Button Width="70" Height="30" Margin="0,0,0,5" FontSize="{StaticResource SmallFontSize}"
                        Content="自動選択"
                        Command="{x:Bind ViewModel.RecognizeTagsCommand}" />

                    <ItemsControl ItemsSource="{x:Bind ViewModel.TagSelector.TagCategoryItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="tagselection:TagCategoryItemViewModel">
                                <StackPanel>
                                    <GridView
                                        SelectionMode="None"
                                        IsItemClickEnabled="False"
                                        ItemsSource="{x:Bind TagItems}">

                                        <GridView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsWrapGrid
                                                    Orientation="Horizontal"
                                                    ItemWidth="85"
                                                    ItemHeight="41" />
                                            </ItemsPanelTemplate>
                                        </GridView.ItemsPanel>

                                        <GridView.ItemTemplate>
                                            <DataTemplate x:DataType="tagselection:TagItemViewModel">
                                                <ToggleButton Width="80" Height="30" FontSize="{StaticResource SmallFontSize}"
                                                    Content="{x:Bind DisplayName}"
                                                    IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                    IsEnabled="{x:Bind IsSelectable, Mode=OneWay}" />
                                            </DataTemplate>
                                        </GridView.ItemTemplate>
                                    </GridView>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>

            <!-- マッチング結果 -->
            <Grid>
                <ItemsControl ItemsSource="{x:Bind ViewModel.MatchResults.MatchGroups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="matching:MatchGroupViewModel">
                            <StackPanel>
                                <TextBlock Text="{x:Bind Name}" FontSize="{StaticResource LeargeFontSize}" />

                                <ListView
                                    SelectionMode="None"
                                    IsItemClickEnabled="False"
                                    ItemsSource="{x:Bind MatchItems}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="matching:MatchItemViewModel">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="170" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" FontSize="{StaticResource SmallFontSize}"
                                                    Text="{x:Bind TagsDisplay}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock Grid.Column="1" FontSize="{StaticResource SmallFontSize}"
                                                    Text="{x:Bind OperatorsDisplay}"
                                                    TextWrapping="Wrap" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
